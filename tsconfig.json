{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "react-native",
        "lib": ["es2017"],
        "moduleResolution": "node",
        "noEmit": true,
        "strict": true,
        "target": "esnext",

        "baseUrl": ".",
        "paths": {
            "@*": ["src/*"],
            "@assets/*": ["src/assets/*"],
            "@components/*": ["src/components/*"],
            "@i18n/*": ["src/i18n/*"],
            "@redux/*": ["src/redux/*"],
            "@routes/*": ["src/routes/*"],
            "@screens/*": ["src/screens/*"],
            "@services/*": ["src/services/*"],
            "@theme/*": ["src/theme/*"],
            "@utils/*": ["src/utils/*"],
            "@env": ["src/env.js"],
            "@constant": ["src/constant"]
        }
    },
    "exclude": [
        "node_modules",
        "babel.config.js",
        "metro.config.js",
        "jest.config.js"
    ],
    "extends": "expo/tsconfig.base"
}
